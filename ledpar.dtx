    \led@err@PendNoPstart
  \fi
  \l@dzeropenalties
  \endgraf\global\num@linesR=\prevgraf\egroup
  \global\par@lineR=0
  \endgroup
  \ignorespaces
  \@oldnobreak
	\ifnumberpstart
	\addtocounter{pstartR}{1}
	\fi	
}

%    \end{macrocode}
% \end{macro}
