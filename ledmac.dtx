% \begin{verbatim}
% \linenummargin{right}
% \beginnumbering
% \pstart
% \newpara\label{P1} A paragraph about \ldots
% \pend
%  In paragraph~\ref{P1} the author \ldots
% \pstart
% \oldpara{P1} This has the same 
%              \edtext{number}{\Afootnote{\ref{P1} is the paragraph, not line}}
%  as the first paragraph.
% \pend
% \endnumbering
