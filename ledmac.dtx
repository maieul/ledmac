% it crops up in \cs{normalfootfmt} and the other footnote
% macros for controlling the format of footnotes.
%    \begin{macrocode}
\def\endashchar{\textnormal{--}}
\newcommand*{\fullstop}{\textnormal{.}}
\newcommand*{\rbracket}{\textnormal{\thinspace]}}

%    \end{macrocode}
% \end{macro}
% \end{macro}
