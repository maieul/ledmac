% places in the stanza for page breaking.
%    \begin{macrocode}
\newcommandx{\stanza@line}[1][1]{
    \ifnum\value{stanzaindentsrepetition}=0
        \parindent=\csname sza@\number\stanza@count
                 @\endcsname\stanzaindentbase
